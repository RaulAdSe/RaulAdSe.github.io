{
  "datasets": {
    "available": ["cifar", "tiny", "dogs"],
    "default": "dogs",
    "descriptions": {
      "cifar": "CIFAR-10 dataset with 32x32 pixel images (50,000 training images)",
      "tiny": "Tiny ImageNet with 64x64 pixel images (100,000+ images)",
      "dogs": "Stanford Dogs dataset with high-resolution dog images (20,000+ images)"
    }
  },
  "generation": {
    "static_mosaic": {
      "tile_size": 9,
      "mosaic_width": 256,
      "output_path": "mosaic_output.jpg"
    },
    "web_tiles": {
      "tile_size": 256,
      "mosaic_width": 80,
      "output_dir": "public/mosaic_tiles_ultra_hd"
    }
  },
  "enhancement": {
    "unsharp_mask": {
      "radius": 1.5,
      "percent": 150,
      "threshold": 2
    },
    "contrast": 1.1,
    "sharpen": true
  },
  "data": {
    "cache_dir": "data",
    "urls": {
      "cifar": "https://www.cs.toronto.edu/~kriz/cifar-10-python.tar.gz",
      "tiny": "https://cs231n.stanford.edu/tiny-imagenet-200.zip"
    }
  },
  "input": {
    "default_image": "profile_3.png",
    "accepted_formats": [".jpg", ".jpeg", ".png", ".bmp", ".gif"]
  }
}